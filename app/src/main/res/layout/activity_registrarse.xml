<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_text_view"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTRARSE"
        android:textSize="28dp"
        android:textColor="@color/Accent"/>

    <ImageView
        android:id="@+id/cuadro1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:src="@drawable/logocafe1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            style="@style/AppTheme.TextViewStyle"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="sans-serif-black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="5dp"
            android:text="Correo"
            android:layout_marginLeft="20dp" />



        <EditText
            android:id="@+id/registro_correo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:inputType="textEmailAddress"
            android:background="@color/white"
            android:drawableStart="@drawable/ic_baseline_border_color_24"
            android:drawableLeft="@drawable/ic_baseline_border_color_24"
            android:hint="Ingresar Correo"
            android:textColor="@color/black" />

        <TextView
            style="@style/AppTheme.TextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-black"
            android:text="ContraseÃ±a"
            android:hint="@string/clave_usuario"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/registro_clave"
            android:drawableStart="@drawable/ic_baseline_vpn_key_24"
            android:textColor="#887F7F"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:layout_marginStart="28dp"
            android:inputType="textPassword"
            android:hint="@string/ingreso_clave"
            android:layout_marginEnd="28dp"
            android:drawableLeft="@drawable/ic_baseline_vpn_key_24" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_Registrar"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="120dp"
                android:onClick="RegistrarUsuario"
                android:text="registrar"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                app:icon="@drawable/register"
                app:rippleColor="@color/design_default_color_on_primary"
                app:strokeColor="@color/white"
                app:strokeWidth="3dp" />

        </LinearLayout>


</LinearLayout>

